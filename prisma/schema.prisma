generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite" // Turso uses SQLite
  url      = env("SECRET_DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  firebaseId String   @unique
  email      String   @unique
  name       String?
  createdAt  DateTime @default(now())
}
