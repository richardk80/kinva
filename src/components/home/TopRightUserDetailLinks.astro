---
const { username } = Astro.props;
---
<div class="flex flex-col space-y-2 mt-[0.5px]">
    {[
      ["Edit Profile", `/${username}/edit` ],
      ["Edit Status", `/${username}/editstatus`],
      ["Edit Links", `/${username}/editlinks`],
      ["Manage Blog", `/${username}/blog`],
      ["Friends List", `/${username}/friends`],
      ["Block List", `/${username}/blocked`],
      ["Account Settings", `/${username}/settings`],
    ].map(([link, href]) => (
    <a class="text-xs font-semibold text-neutral-950 hover:text-red-600 hover:underline w-fit" href={href}>{link}</a>
     ))
    }
</div>