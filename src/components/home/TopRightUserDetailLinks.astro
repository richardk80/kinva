---
const { username } = Astro.props;
---
<div class="flex flex-col space-y-2">
    {[
      ["Edit Profile", `/${username}/edit` ],
      ["Edit Status", `/${username}/editstatus`],
      ["Edit Your Links", `/${username}/editlinks`],
      ["Manage Blog", `/${username}/blog`],
      ["Friends List", `/${username}/friends`],
      ["Users Blocked", `/${username}/blocked`],
      ["Account Settings", `/${username}/settings`],
    ].map(([link, href]) => (
    <a class="text-xs font-semibold text-blue-600 hover:text-red-600 hover:underline w-fit" href={href}>{link}</a>
     ))
    }
</div>