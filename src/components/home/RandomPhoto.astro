---
import RandomPhotoBox from "@com/main/RandomPhotoBox.astro";
import RandomPhotoData from "@com/home/RandomPhotoData.astro";

const queryterm = 'Party';
---
<RandomPhotoBox 
    widthcss="w-[304px]" 
    name={queryterm}
    loggedin
    pclass="flex items-center justify-between mx-2 text-white text-xs font-semibold mt-0.5 flex flex-grow capitalize" 
    backgroundColor="bg-neutral-900" 
    borderColor="border-neutral-900/80"
>
    <div class="my-2 mx-2 h-[207px] relative">
        <RandomPhotoData server:defer>
            <div slot="fallback">
                <!-- Image Placeholder -->
                <div class="h-[190px] w-full bg-neutral-400 animate-pulse"></div>
            
                <!-- Caption Placeholder -->
                <div class="flex justify-center mt-[4px]">
                  <div class="h-4 w-64 bg-neutral-400 animate-pulse"></div>
                </div>
              </div>
        </RandomPhotoData>
    </div>
</RandomPhotoBox>