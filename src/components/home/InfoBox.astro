---
import RelativeTime from '@yaireo/relative-time';
import NonRegularBox from '@com/main/NonRegularBox.astro';

const { username, created } = Astro.props;

const datetoday = new Date().toLocaleDateString(undefined, { month: 'short', day: 'numeric', year: 'numeric', timeZone: 'America/New_York' });
---

<NonRegularBox 
    widthcss="w-[150px]" 
    name={datetoday} 
    pclass="flex justify-center text-xs font-bold text-white h-[17px] mt-[1.5px]" 
    backgroundColor="bg-[#252728]" 
    borderColor="border-[#252728]"
>
    <div class="py-2 space-y-2 text-xs font-semibold text-center">
        <div>
            <p>Your Friends:</p>
            <a class="text-[#252728] hover:underline" href=`${username}/friends` set:text="50" />
        </div>
        <div>
            <p>Profile Views:</p>
            <p class="text-[#252728]" set:text="200" />
        </div>
        <div>
            <p>Joined:</p>
            <p class="text-[#252728]" set:html={new RelativeTime().from(new Date(created))} />
        </div>
    </div>
</NonRegularBox>