---
import RelativeTime from '@yaireo/relative-time';
import NonRegularBox from '@com/main/NonRegularBox.astro';

const datetoday = new Date().toLocaleDateString('en-US', { 
    month: 'short', 
    day: 'numeric', 
    year: 'numeric', 
    timeZone: 'America/New_York' 
});
---
<NonRegularBox 
    widthcss="w-[150px]" 
    name={datetoday} 
    pclass="flex justify-center text-xs font-bold text-white h-[17px] mt-[1.5px]" 
    backgroundColor="bg-neutral-950" 
    borderColor="border-neutral-950"
>
    <div class="py-2 space-y-2 text-xs font-semibold text-center">
        <div>
            <p>Your Friends:</p>
            <p class="text-neutral-950">50</p>
        </div>
        <div>
            <p>Profile Views:</p>
            <p class="text-neutral-950">200</p>
        </div>
        <div>
            <p>Joined:</p>
            <p class="text-neutral-950">{new RelativeTime().from(new Date('2023-12-23'))}</p>
        </div>
    </div>
</NonRegularBox>