---
import RelativeTime from '@yaireo/relative-time';
import NonRegularBox from '@com/main/NonRegularBox.astro';

const datetoday = new Date().toLocaleDateString(undefined, { month: 'short', day: 'numeric', year: 'numeric', timeZone: 'America/New_York' });
const createdDate = new RelativeTime().from(new Date('01-01-2020'));

const { username } = Astro.props;
---

<NonRegularBox 
    widthcss="w-[150px]" 
    name={datetoday} 
    pclass="flex justify-center text-xs font-bold text-white h-[17px] mt-[1.5px]" 
    backgroundColor="bg-[#1E40AF]" 
    borderColor="border-[#1E40AF]"
>
    <div class="py-2 space-y-2 text-xs font-semibold text-center">
        <div>
            <p>Your Friends:</p>
            <a class="text-[#ED0707] hover:underline" href=`${username}/friends` set:text="50" />
        </div>
        <div>
            <p>Profile Views:</p>
            <p class="text-[#ED0707]" set:text="200" />
        </div>
        <div>
            <p>Joined:</p>
            <p class="text-[#ED0707]" set:html={createdDate} />
        </div>
    </div>
</NonRegularBox>