---
import NonRegularBox from '@com/main/NonRegularBox.astro';

const friendrequests: number = 5;
const { username } = Astro.props;
---
<NonRegularBox 
  name="Friend Requests" 
  pclass="flex items-center justify-between mx-2 text-xs font-semibold text-white mt-0.5 mb-[1px]" 
  backgroundColor="bg-neutral-950" 
  borderColor="border-neutral-950"
>
    <div class="ml-2 mt-1.5 mb-2">
      <div>
        <p class="font-semibold text-xs my-0.5">
          You have <span class="text-neutral-950">{friendrequests}</span> friend { friendrequests === 1 ? 'request' : 'requests' }
        </p>
        <a class="py-[2px] px-2 bg-neutral-950 hover:underline text-xs text-white border border-neutral-950" href=`/${username}/friendrequests`>View Requests</a>
      </div>
    </div>
</NonRegularBox>