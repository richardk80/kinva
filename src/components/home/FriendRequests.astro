---
import NonRegularBox from '@com/main/NonRegularBox.astro';

const friendrequests: number = 5;
const { username } = Astro.props;
---
<NonRegularBox 
  name="Friend Requests" 
  pclass="flex items-center justify-between mx-2 text-xs font-semibold text-[#ED0707] mt-0.5 mb-[1px]" 
  backgroundColor="bg-[#f9c56c]" 
  borderColor="border-[#f9c56c]"
>
    <div class="ml-2 mt-1 mb-[7px]">
      <div>
        <p class="font-semibold text-xs mb-0.5">
          You have <span class="text-[#ED0707]">{friendrequests}</span> friend { friendrequests === 1 ? 'request' : 'requests' }
        </p>
        <a class="py-[2px] px-2 bg-zinc-100 hover:bg-zinc-200 text-xs text-zinc-950 border border-zinc-500 focus:outline-none" href=`/${username}/friendrequests`>View All Requests</a>
      </div>
    </div>
</NonRegularBox>