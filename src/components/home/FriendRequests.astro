---
import NonRegularBox from '@com/main/NonRegularBox.astro';

const friendrequests: number = 5;
const { username } = Astro.props;
---
<NonRegularBox 
  name="Friend Requests" 
  pclass="flex items-center justify-between mx-2 text-xs font-semibold text-white mt-0.5 mb-[1px]" 
  backgroundColor="bg-neutral-900" 
  borderColor="border-neutral-900"
>
    <div class="ml-2 mt-1 mb-[7px]">
      <div>
        <p class="font-semibold text-xs mb-0.5">
          You have <span class="text-neutral-900">{friendrequests}</span> friend { friendrequests === 1 ? 'request' : 'requests' }
        </p>
        <a class="py-[2px] px-2 bg-neutral-900/10 hover:bg-neutral-900/15 text-xs border border-neutral-900 focus:outline-none" href=`/${username}/friendrequests`>View Requests</a>
      </div>
    </div>
</NonRegularBox>