---
import NonRegularBox from '@com/main/NonRegularBox.astro';

const friendrequests: number = 5;

const { username } = Astro.props;
---
<NonRegularBox 
  name="Friend Requests" 
  pclass="flex items-center justify-between mx-2 text-xs font-semibold text-red-600 mt-0.5 mb-[1px]" backgroundColor="bg-orange-400/60" 
  borderColor="border-orange-400/60"
>
    <div class="ml-2 mt-1 mb-1.5">
      <div>
        <p class="font-semibold text-xs mb-0.5">You have <span class="text-red-600">{friendrequests}</span> friend { friendrequests === 0 ? 'requests' : friendrequests > 1 ? 'requests' : 'request' }</p>
        <button type="button" class="py-0.5 px-2 bg-zinc-100 hover:bg-zinc-200 text-xs text-zinc-950 border border-zinc-500 focus:outline-none">
            <a href={`/${username}/friendrequests`}>
            View All Requests
            </a>
          </button>
      </div>
    </div>
</NonRegularBox>
