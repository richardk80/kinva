---
import NonRegularBox from '@com/main/NonRegularBox.astro';

const { friendrequests } = Astro.props;

const username = 'astro';
---
<NonRegularBox name="Friend Requests" pclass="flex items-center justify-between mx-2 text-xs font-semibold text-red-600 mt-0.5 mb-[1px]" backgroundColor="bg-orange-400/60" borderColor="border-orange-400/60">
    <div class="mt-1 mb-1.5 mx-2 space-y-1">
      <p class="text-black font-semibold text-xs">You have <span class="text-red-600">0</span> friend { friendrequests === 1 ? 'request' : 'requests' }</p>
      <a class="mt-2" href=`${username}/friendrequests`>
        <button type="button" class="py-0.5 px-2 bg-gray-100 hover:bg-gray-200 text-xs text-black border border-black focus:outline-none">View All Requests</button>
      </a>
    </div>
</NonRegularBox>