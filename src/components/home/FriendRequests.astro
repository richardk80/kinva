---
import NonRegularBox from '@com/main/NonRegularBox.astro';

const friendrequests: number = 5;

const { username } = Astro.props;
---
<NonRegularBox 
  name="Friend Requests" 
  pclass="flex items-center justify-between mx-2 text-xs font-semibold text-red-600 mt-0.5 mb-[1px]" backgroundColor="bg-orange-400/60" 
  borderColor="border-orange-400/60"
>
    <div class="ml-2 mt-1 mb-1.5">
      <div>
        <p class="text-black font-semibold text-xs mb-0.5">You have <span class="text-red-600">{friendrequests}</span> friend { friendrequests === 0 ? 'requests' : friendrequests > 1 ? 'requests' : 'request' }</p>
        <a href={`/${username}/friendrequests`}>
          <button type="button" class="py-0.5 px-2 bg-gray-100 hover:bg-gray-200 text-xs text-black border border-black focus:outline-none">
            View All Requests
          </button>
        </a>
      </div>
    </div>
</NonRegularBox>
