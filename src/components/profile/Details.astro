---
import BubbleBox from "@com/main/BubbleBox.astro";

const detailwords = [
    { words: 'Single'},
    { words: 'Capricorn'},
    { words: 'Yes'},
    { words: 'No'},
    { words: 'Associate Degree'}
];

const { name, statuswords, herefor, hometown, ethnicity, zodiac, smoke, drink, education, occupation, loggedin, username } = Astro.props;

//let parts = name.split(' ')
//let firstName = parts.shift();
//let lastName = parts.join(' ');
---
<BubbleBox 
    username2={`${name}'s`} 
    name="Details" 
    name2="[edit details]"
    loggedin={loggedin}
    pclass="flex items-center justify-between mx-2 text-xs font-semibold text-white mt-0.5 flex flex-grow" 
    backgroundColor="bg-[#252728]" 
    borderColor="border-[#252728]/80" 
    aclass="text-[10px] -mt-0.5 font-normal hover:underline text-white" 
    aurl={`/${username}/editdetails`}
>
    <div class="p-1 space-y-1">
        <div class="flex items-stretch space-x-1">
            <div class="w-1/3 bg-[#252728]/20">
                    <p class="text-xs font-semibold text-[#252728] pl-1 pt-0.5">
                        Zodiac
                    </p>
            </div>
            <div class="w-2/3 bg-[#252728]/10">
                <p class="text-xs pt-0.5 pl-1 w-full text-balance" set:html={detailwords[1].words}>
                </p>
            </div>
        </div>
        <div class="flex items-stretch space-x-1">
            <div class="w-1/3 bg-[#252728]/20">
                    <p class="text-xs font-semibold text-[#252728] pl-1 pt-0.5">
                        Smoke
                    </p>
            </div>
            <div class="w-2/3 bg-[#252728]/10">
                <p class="text-xs pt-0.5 pl-1 w-full text-balance" set:html={detailwords[2].words}>
                </p>
            </div>
        </div>
        <div class="flex items-stretch space-x-1">
            <div class="w-1/3 bg-[#252728]/20">
                    <p class="text-xs font-semibold text-[#252728] pl-1 pt-0.5">
                        Drink
                    </p>
            </div>
            <div class="w-2/3 bg-[#252728]/10">
                <p class="text-xs pt-0.5 pl-1 my-auto w-full text-balance" set:html={detailwords[3].words}>
                </p>
            </div>
        </div>
        <div class="flex items-stretch space-x-1">
            <div class="w-1/3 bg-[#252728]/20">
                    <p class="text-xs font-semibold text-[#252728] pl-1 pt-0.5">
                        Education
                    </p>
            </div>
            <div class="w-2/3 bg-[#252728]/10">
                <p class="text-xs pt-0.5 pl-1 w-full text-balance" set:html={detailwords[4].words}>
                </p>
            </div>
        </div>
</div>
</BubbleBox>