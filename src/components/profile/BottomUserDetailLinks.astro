---
const { username } = Astro.props;
---
<div class="flex items-center">
    <p class="text-xs font-semibold">View My:
        <div class="flex items-center space-x-1 ml-1">
        {[
            [ "text-xs font-semibold text-neutral-900 hover:text-red-600 hover:underline",  `/${username}/blog`, "Blog", "text-xs font-medium", "-" ],
            [ "text-xs font-semibold text-neutral-900 hover:text-red-600 hover:underline", `/${username}/bulletins`, "Bulletins", "text-xs font-medium", "-" ],
            [ "text-xs font-semibold text-neutral-900 hover:text-red-600 hover:underline", `/${username}/forums`, "Forums", "text-xs font-normal", "" ],
          ].map(([ classname, href, link, dividercss, divider ]) => (
                    <a class={classname} href={href}>{link}</a>
                    <span class={dividercss}>{divider}</span>
            ))
        }
        </div>
    </p>
</div>