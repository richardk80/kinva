---
import BubbleBox from '@com/main/BubbleBox.astro';

const { aboutwords, meetwords, loggedin, name, username } = Astro.props;

//let parts = name.split(' ')
//let firstName = parts.shift();
//let lastName = parts.join(' ');
---
<BubbleBox 
  widthcss="min-w-full" 
  username2={`${name}'s`} 
  name="Blurbs"
  loggedin={loggedin}
  name2="[edit blurbs]" 
  pclass="flex items-center justify-between mx-2 text-xs font-semibold text-white mt-0.5 flex flex-grow" 
  backgroundColor="bg-[#252728]" 
  borderColor="border-[#252728]/80" 
  aclass="text-[10px] -mt-0.5 font-normal hover:underline text-white" 
  aurl=`/${username}/editblurbs`
>
    <div class="mt-1 mb-1.5 ml-2 mr-3 space-y-0.5">
      <div>
        <h2 class="text-[#252728] text-[12.8px] font-semibold">About {name}</h2>
        <p class="text-xs whitespace-wrap break-words align-baseline h-full w-full text-balance" set:html={aboutwords}></p>
      </div>
      <div>
        <h2 class="text-[#252728] text-[12.8px] font-semibold">Who I'd Like to Meet</h2>
        <p class="text-xs whitespace-normal break-words align-baseline h-full w-full text-balance" set:html={meetwords}></p>
      </div>
      </div>
</BubbleBox>