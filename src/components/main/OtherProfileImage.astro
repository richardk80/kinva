---
interface Props {
    width: number;
    height: number;
    imgclass?: string;
    srcurl?: string;
    altText?: string;
    titleText?: string;
    loggedin?: boolean;
    livestreaming?: boolean;
}

import { Image } from 'astro:assets';

const { width, height, imgclass, srcurl, altText, titleText, loggedin, livestreaming } = Astro.props;
---
<div class="relative inline-block">
    <Image width={width} height={height} class={imgclass} loading="eager" src={srcurl} alt={altText} title={titleText} />
    {loggedin && ( <div class={`absolute bottom-0.5 right-0 block w-5 h-5 rounded-full border-[2px] border-white -mb-1 -mr-1 ${livestreaming ? 'bg-red-500' : 'bg-green-500'}`}></div>)}
</div>