---
interface Props {
  widthcss?: string;
  backgroundColor?: string;
  borderColor?: string;
  name?: string;
  pclass?: string;
  username?: string;
  username2?: string;
  name2?: string;
  aclass?: string;
  aurl?: string;
  bclass?: string;
};

const { widthcss, backgroundColor, borderColor, name, pclass, username, name2, aclass, aurl, bclass } = Astro.props;
---
<div class={widthcss}>
    <div class="py-0.5" class:list={backgroundColor}>
        <div class={pclass}>
          <p>{username} {name}</p>
          <a class={bclass} href={aurl}>
            [<p class={aclass}>
              {name2}
            </p>]
          </a>
    </div>
    </div>
        <div class="border-2 border-solid" class:list={borderColor}>
                <slot />
        </div>
</div>