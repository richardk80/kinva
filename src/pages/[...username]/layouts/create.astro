---
import Layout from '@lay/Layout.astro';

const url = "http://localhost:3000";
const response = await fetch(`${url}/api/v1/data`);
const data = await response.json();

const { username } = Astro.params;
const page = data.find((page) => page.username === username);
if (!page) return Astro.redirect("/404");
const { name, hidden } = page;

let parts = name.split(' ')
let firstName = parts.shift();
let lastName = parts.join(' ');
---
<Layout title="Create Layout">
	<main class="mx-[50px] mb-8">
		<h1 class="text-[19.2px] font-semibold mb-1">Create Layout</h1>
        <p class="mb-2"><a class="text-blue-600 hover:text-red-600 hover:underline text-xs" href={`/${username}/layouts`}>« Back to your layouts</a></p>
		<a class="text-blue-600 hover:text-red-600 hover:underline text-xs" href="/">« Back to your homepage</a>
	</main>
</Layout>